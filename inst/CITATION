  journal      = "Advance. Preprint",
  year         = "2021",
  volume       = " ",
  number       = " ",
  pages        = " ",
  url          = "https://doi.org/10.31124/advance.14716638.v1",

  textVersion  =
  paste("Jose M. Pavía, Rafael Romero (2021). ",
        "Improving estimates accuracy of voter transitions. ",
        "Two new algorithms for ecological inference based on linear programming. ",
        "URL https://doi.org/10.31124/advance.14716638.v1")
)

